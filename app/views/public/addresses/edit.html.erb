<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light">配送先編集</span></h5>
    </div>
    <div class="col-sm-6"></div>
  </div>
  <div class="row">
    <div class="col-sm-12 my-4">
      <%= form_with model:@address, url:address_path(@address.id), method: :patch, local:true do |f| %>
        <div class="form-group row my-2">
          <div class="col-sm-3">
           <%= f.label:郵便番号, class:"col-form-control" %><span>(ハイフンなし)</span>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :postal_code, class:"form-control", autofocus: true, autocomplete: "postal_code" %>
          </div>
        </div>
        <div class="form-group row my-4">
          <div class="col-sm-3">
            <%= f.label:住所, class:"col-form-control" %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :address, class:"form-control", autofocus: true, autocomplete: "address" %>
          </div>
        </div>
        <div class="form-group row my-4">
          <div class="col-sm-3">
            <%= f.label:宛名, class:"col-form-control" %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "address" %>
          </div>
          <div class="col-sm-3"></div>
          <div class="col-sm-2">
            <%= f.submit "変更内容を保存", class: 'form-control btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>