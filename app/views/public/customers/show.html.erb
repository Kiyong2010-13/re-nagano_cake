<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light">マイページ</span></h5>
    </div>
    <div class="col-sm-6 my-3">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 my-1">
      <h6 id="hoge"><strong>登録情報</strong></h6>
      <%= link_to "編集する", customers_my_page_edit_path, class: 'btn btn-success ml-4' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 my-1">
      <table class="table table-bordered my-4">
        <tbody>
          <tr>
            <th style="width: 30%">氏名</th>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <th style="width: 30%">カナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <th style="width: 30%">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th style="width: 30%">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th style="width: 30%">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th style="width: 30%">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 my-1">
      <h6 id="hoge"><strong>配送先</strong></h6>
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary ml-4 text-center' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 my-2">
      <h6 id="hoge"><strong>注文履歴</strong></h6>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary ml-4' %>
    </div>
  </div>
</div>