<div class="container">
  <div class="row">
    <div class="col-sm-3 my-3"><h5 class="text-center bg-light">新規会員登録</h5></div>
    <div class="col-sm-9 my-3"></div>
  </div>
  <div class="row">
    <div class="col-sm-12 my-5">
      <%= form_with model: resource, url: customer_registration_path, local: true do |f| %>

        <div class="form-group row">
          <%= f.label :名前, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-3">
           <label>(姓)</label>
           <%= f.text_field :last_name, class:"form-control", autofocus: true, autocomplete: "last_name" %>
          </div>
          <div class="col-sm-3">
           <label>(名)</label>
           <%= f.text_field :first_name, class:"form-control", autofocus: true, autocomplete: "first_name" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :フリガナ, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-3">
            <label>(セイ)</label>
            <%= f.text_field :last_name_kana, class:"form-control", autofocus: true, autocomplete: "last_name_kana" %>
          </div>
          <div class="col-sm-3">
            <label>(メイ)</label>
            <%= f.text_field :first_name_kana, class:"form-control", autofocus: true, autocomplete: "first_name_kana" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :メールアドレス, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-6">
           <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-sm-3">
           <%= f.label :郵便番号, class:"col-form-label" %><span>(ハイフンなし)</span>
          </div>
          <div class="col-sm-3">
           <%= f.text_field :postal_code, class:"form-control", autofocus: true, autocomplete: "postal_code" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :住所, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-6">
           <%= f.text_field :address, class:"form-control", autofocus: true, autocomplete: "address" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-sm-3">
           <%= f.label :電話番号, class:"col-form-label" %><span>(ハイフンなし)</span>
          </div>
          <div class="col-sm-3">
           <%= f.text_field :telephone_number, class:"form-control", autofocus: true, autocomplete: "telephone_number" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-sm-3">
           <%= f.label :パスワード, class:"col-form-label" %><span>(6文字以上)</span>
          </div>
          <div class="col-sm-3">
           <%= f.password_field :password, class:"form-control",　autofocus: true, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="actions row mt-4">
          <div class="col-sm-3">
          </div>
          <div class="col-sm-3">
           <%= f.submit "登録する", class: 'form-control btn btn-success' %>
          </div>
        </div>

      <% end %>
    </div>

  </div>
  <div class="row">
    <div class="col-sm-3 my-3"><h5 class="text-center bg-light">既に登録済みの方</h5></div>
    <div class="col-sm-9 my-3"></div>
  </div>
  <div class="row">
    <div class="col-sm-5 my-3 text-center"><%= link_to "こちら", new_customer_session_path %>からログインしてください</div>
    <div class="col-sm-7 my-3"></div>
  </div>
</div>
