<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light">注文情報入力</span></h5>
    </div>
    <div class="col-sm-6 my-3">
    </div>
  </div>
  <%= form_with model: @order, url: comfirm_orders_path, method: :post, local: true do |f| %>
  <div class="row">
    <div class="col-sm-6">
        <div class="button-group">
            <h5><strong>支払方法</strong></h5>
            <div class="form-group mt-4 ml-4">
              <%= f.radio_button :payment_method, "credit_card" %>
              <%= f.label :payment_method, "クレジットカード" %><br>
              <%= f.radio_button :payment_method, "transfer" %>
              <%= f.label :payment_method, "銀行振込" %>
            </div>
    　　</div>
    　　<div class="button-group">
            <h5><strong>お届け先</strong></h5>
            <div class="form-group mt-4 ml-4">
              <%= f.radio_button :address_option, 0, checked: "checked" %>
              <%= f.label :address, "ご自身の住所" %><br>
              <div class="ml-3">
                〒<%= current_customer.postal_code %>      <%= current_customer.address %><br>
                <%= current_customer.full_name %><br>
              </div>
            </div>
            <div class="form-group mt-4 ml-4">
              <%= f.radio_button :address_option, 1 %>
              <%= f.label :address, "登録済住所から選択" %><br>
              <div class="ml-3">
                <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address) %><br>
              </div>
            </div>
            <div class="form-group mt-4 ml-4">
              <%= f.radio_button :address_option, 2 %>
              <%= f.label :order_address, "新しいお届け先" %><br>
              <table class="ml-3">
               <tr>
                 <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
                 <td><%= f.text_field :postal_code %></td>
               </tr>
               <tr>
                 <td><%= f.label :address, "住所" %></td>
                 <td><%= f.text_field :address %></td>
               </tr>
               <tr>
                 <td><%= f.label :name, "宛名" %></td>
                 <td><%= f.text_field :name %></td>
               </tr>
              </table>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row mt-1 my-3">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 text-center">
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary form-control' %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <% end %>
</div>