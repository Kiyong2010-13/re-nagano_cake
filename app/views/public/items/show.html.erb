<div class="container">
  <div class="row">
    <div class="col-sm-2 mt-4">
    </div>
    <div class="col-sm-3 mt-4">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size:'200x200' %>
    </div>
    <div class="col-sm-7  mt-4">
      <h2><%= @item.name %></h2>
      <h5 class="mt-4"><%= @item.introduction %></h5>
      <div class="item-box row my-3">
        <h4 class="col-sm-3"><%= @item.add_tax_price.to_s(:delimited) %>円</h4>
        <label>(税込)</label>
      </div>
    </div>
  </div>
</div>