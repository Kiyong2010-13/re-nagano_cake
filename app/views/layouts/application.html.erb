<!DOCTYPE html>
<html>
  <head>
    <title>ReNaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top border-bottom border-dark">
      <div class="container">
        <nav class="nav navber-left">
          <h2><li><%= link_to "NAGANO CAKE!!", class: "nav-link border border-dark text-dark" %></li></h2>
        </nav>
        <ul class="nav navbar-right">
            <% if admin_signed_in? %>
              <li><%= link_to "商品一覧", admin_items_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "会員一覧", admin_customers_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "注文履歴一覧", admin_root_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link border border-dark", method: :delete %></li>
            <% elsif customer_signed_in? %>
              <li><%= link_to "マイページ", customers_my_page_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "商品一覧", items_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "カート", cart_items_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, class: "nav-link border border-dark", method: :delete %></li>
            <% else %>
              <li><%= link_to "About", about_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "商品一覧", items_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: "nav-link border border-dark" %></li>
              <li><%= link_to "管理者", new_admin_session_path, class: "nav-link border border-dark" %></li>

            <% end %>
        </ul>

      </div>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
