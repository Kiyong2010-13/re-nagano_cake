<div class="container">
  <div class="row">
    <div class="col-sm-3 my-3"><h5 class="text-center bg-light">管理者ログイン</h5></div>
    <div class="col-sm-9 my-5">
        <%= form_with model: resource, url: admin_session_path, local: true do |f| %>
          <div class="form-group row">
            <%= f.label :メールアドレス, class:"col-sm-4 col-form-label" %>
            <div class="col-md-6">
             <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
            </div>
          </div>
  
          <div class="form-group row">
            <%= f.label :パスワード,  class:"col-sm-4 col-form-label" %>
            <div class="col-md-6">
             <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
            </div>
          </div>
  
          <div class="actions text-center my-5">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
        <% end %>

    </div>
  </div>
</div>
