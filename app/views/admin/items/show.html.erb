<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light">商品詳細</span></h5>
    </div>
    <div class="col-sm-6"></div>
  </div>
  <div class="row">
    <div class="col-sm-3 mt-4">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size:'300x300' %>
    </div>
    <div class="col-sm-9  mt-4 text-center">
      <div class="item-box">
        <label>商品名</label>
        <%= @item.name %>
      </div>
      <div class="item-box my-3">
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div class="item-box my-3">
        <label>ジャンル</label>
        <%= @item.genre.name %>
      </div>
      <div class="item-box my-3">
        <label>税込価格<br>(税抜価格)</label>
        <%= @item.add_tax_price.to_s(:delimited) %>円 (<%= @item.price.to_s(:delimited) %>)円
      </div>
      <div class="item-box my-3">
        <label>販売ステータス</label>
        <% if @item.is_active == true %>
            <span>販売中</span>
          <% else%>
            <span>販売停止中</span>
          <% end %>
      </div>
      <div class="my-3">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>