<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5><span class="bg-light"><%= @customer.full_name %>さんの会員詳細</span></h5>
    </div>
    <div class="col-sm-6 my-3">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">会員ID</label>
        <div class="col-sm-6">
         <%= @customer.id %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">氏名</label>
        <div class="col-sm-6">
         <%= @customer.full_name %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">フリガナ</label>
        <div class="col-sm-6">
         <%= @customer.full_name_kana %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">郵便番号</label>
        <div class="col-sm-6">
         <%= @customer.postal_code %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">住所</label>
        <div class="col-sm-6">
         <%= @customer.address %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">電話番号</label>
        <div class="col-sm-6">
         <%= @customer.telephone_number %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">メールアドレス</label>
        <div class="col-sm-6">
         <%= @customer.email %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 my-3">
      <div class="group row">
        <label class="col-sm-2">会員ステータス</label>
        <div class="col-sm-6">
         <% if @customer.is_deleted == false %>
            <span>有効</span>
          <% else%>
            <span>退会</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-2 my-5">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    </div>
    <div class="col-sm-3 my-5">
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>