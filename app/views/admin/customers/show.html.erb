<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light"><%= @customer.full_name %>さんの会員詳細</span></h5>
    </div>
    <div class="col-sm-6 my-3">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>会員ID</label>
        <div class="col-sm-6">
         <%= @customer.id %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>氏名</label>
        <div class="col-sm-6">
         <%= @customer.full_name %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>フリガナ</label>
        <div class="col-sm-6">
         <%= @customer.full_name_kana %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>郵便番号</label>
        <div class="col-sm-6">
         <%= @customer.postal_code %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>住所</label>
        <div class="col-sm-6">
         <%= @customer.address %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>電話番号</label>
        <div class="col-sm-6">
         <%= @customer.telephone_number %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>メールアドレス</label>
        <div class="col-sm-6">
         <%= @customer.email %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 my-4">
      <div class="showbox row">
        <label>会員ステータス</label>
        <div class="col-sm-6">
         <% if @customer.is_active == false %>
            <span>有効</span>
          <% else%>
            <span>退会</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="my-3">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
  </div>
</div>