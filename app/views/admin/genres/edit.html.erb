<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center"><span class="bg-light">ジャンル編集</span></h5>
    </div>
    <div class="col-sm-4 my-4">
      <p class="text-right"><%= link_to "→一覧に戻る", admin_genres_path %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 my-4">
      <%= form_with model:@genre, url:admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
        <div class="form-row">
          <div class="form-group col-2 text-center">
            <label for="genre_name">ジャンル名</label>
          </div>
          <div class="form-group col-3">
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group col-2 text-center">
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>