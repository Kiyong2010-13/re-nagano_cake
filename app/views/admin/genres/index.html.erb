<div class="container">
  <div class="row">
    <div class="col-sm-6 my-4">
      <h5 class="text-center">ジャンル一覧・追加</h5>
    </div>
    <div class="col-sm-6 my-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-12 my-4">
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
      <div class="form-row">
        <div class="form-group col-2 text-center">
         <label for="genre_name">ジャンル名</label>
        </div>
        <div class="form-group col-3">
         <%= f.text_field :name, placeholder:"ジャンル名", class:"form-control" %>
        </div>
        <div class="form-group col-2 text-center">
         <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <table class="table">
        <thead class="thead-lignt">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>